<h2>Make a new article <%= link_to 'New Article', new_article_path %></h2>
<div class="container">
  <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 50 }'>
    <div class="grid">
      <% @articles.each do |article| %>
      <div class="grid-item">
        <h3><%= article.title %></h3>
        <p>
          <%= image_tag article.image.url %>
        </p>
        <p>
          <%= article.content.truncate(100) %>
          <%= link_to 'Read more', article_path(article.id) %>
        </p>
        <div class="article" id="<%= article.id %>">
          <div class="front">
            <p>
              <span><%= link_to 'Edit', edit_article_path(article.id) %> | </span>
              <span><%= link_to 'Delete', article_path(article.id), method: "DELETE", data: {confirm: 'Delete this data ? '} %> </span>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>